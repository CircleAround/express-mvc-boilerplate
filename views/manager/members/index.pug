extends ../../layout

block content 
  h1 member:index

  h2 新メンバー追加
  form(action=`/manager/teams/${team.id}/members/`, method="post")
    _csrf
    select(name="userId")
      each user in users 
        option(value!=user.id)=user.displayName
    input(type="submit", value="追加")    

  h2 メンバー一覧
  table(border="1") 
    thead 
      tr 
        th 役割
        th 名前
        th 操作
    tbody 
      each member in members
        tr
          td= member.role
          td= member.user.displayName
          td
            a(href=`/manager/members/${member.id}?_method=delete`) 削除