extends ../../layout

block content 
  h1 team:show

  dl
    dt title
    dd= team.title
    dt body
    dd= team.body

  h2 タスク一覧

  include ../../shared/task_table.pug
  +task_table(tasks)

  div
    form(action=`/manager/teams/${team.id}/tasks`, method="post")
      _csrf

      p タイトル
      input(type="text", name="title")

      p 詳細
      textarea(name="body", cols="30", rows="5") 

      input(type="submit", value="作成")