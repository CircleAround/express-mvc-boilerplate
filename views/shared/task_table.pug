mixin task_table(tasks)
  table(border="1")
    tbody 
      tr 
        th チーム
        th タスクID
        th 状態
        th タイトル
        th 担当者
        th 作成日時
        th 操作

      each task in tasks
        tr
          td= task.team.name
          td= task.id
          td= __(`models.Task.statuses.${task.status}`)
          td= task.title
          td= (task.assignee) ? task.assignee.displayName : 'なし'
          td= helpers.formatDateTime(task.createdAt)
          td
            a(href=`/tasks/${task.id}`) 詳細
              

