extends ../layout

block content 
  h1 Post:index

  a(href="/posts/create") 新規作成

  table 
    tbody 
      each post in posts
        tr
          td= post.id
          td= post.title
          td
            a(href=`/posts/${post.id}`) 詳細
            a(href=`/posts/${post.id}/edit`) 編集
            a(href=`/posts/${post.id}?_method=delete`) 削除