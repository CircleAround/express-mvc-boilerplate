extends layout 

block content 
  if(user)
    p 現在 #{user.username} でログイン中

  h2 ログイン
  form(action="/login" method="post")
    _csrf
    div
      label Username:
      input(type="text", name="username")
    div
      label password:
      input(type="password", name="password", value=(process.env.NODE_ENV!='production') ? "password": '')
    div
      input(type="submit", value="ログイン")
